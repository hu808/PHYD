<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3sp"
    app:cardElevation="20sp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp"
        android:id="@+id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IV_Close"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_connect_without_contact_24"
                android:gravity="start"/>

            <TextView
                android:id="@+id/fctxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:text="洽談保險公司"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/cctxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:gravity="start"
                android:textColor="#000000"
                android:text="選擇保險公司 :"/>

            <Spinner
                android:id="@+id/rspinnercom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.22"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="start">

            <TextView
                android:id="@+id/tltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:gravity="start"
                android:textColor="#000000"
                android:text="資料時程長度 :"/>

            <TextView
                android:id="@+id/timelong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:text="- - -"
                android:textColor="#81000000"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/labeltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="優惠條件試算因子 :"
                android:textSize="20sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/callabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#81000000"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical"
                android:text="- - -"
                android:layout_marginLeft="6dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">

            <Button
                android:id="@+id/rcaculate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg"
                android:text="試 算"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/rcancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="90dp"
                android:background="@drawable/btn_bg"
                android:text="取 消"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_marginLeft="90dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>